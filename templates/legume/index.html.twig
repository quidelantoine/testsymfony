{% extends 'base.html.twig' %}

{% block title %}Les légumes{% endblock %}

{% block body %}
    <h1>Les légumes</h1>
    <p><a href="{{ path('new_legume') }}">Ajouter légume</a></p>
    {% for legume in legumes %}
            <p>{{ legume.title|capitalize }}</p>
            <p><a href="{{ path('legume',{'id': legume.id}) }}">Voir plus</a></p>
            <p><a href="{{ path('edit_legume',{'id': legume.id}) }}">Editer</a></p>
        {{ include('legume/_delete_form.html.twig') }}
    {% endfor %}
{% endblock %}
